type: txt
help: Descricao

syntax:expression: pattern $VAR(@) "^.{1,256}$" \
	; "Descricao muito longa (limite 256 caracteres)"

update:
    if [ -d /sys/class/net/$VAR(../@) ] ; then
     sudo sh -c "echo \"$VAR(@)\" >/sys/class/net/$VAR(../@)/ifalias"
    fi

delete:
    if [ -d /sys/class/net/$VAR(../@) ] ; then
     sudo sh -c "echo '' >/sys/class/net/$VAR(../@)/ifalias"
    fi
